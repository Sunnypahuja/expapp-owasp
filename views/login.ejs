  <!-- wrapper-->
  <body class="bg-login">
  <div class="wrapper">
      <div
        class="section-authentication-login d-flex align-items-center justify-content-center"
        >
        <div class="row" style="width: 75%">
            <div class="col-12 col-lg-12 mx-auto">
              <div class="card radius-15">
                  <div class="row no-gutters">
                    <div class="col-lg-6">
                        <div class="card-body p-md-5">
                          <div class="text-center">
                              <img src="assets/images/logo-icon.png" width="80" alt="" />
                              <h3 class="mt-4 font-weight-bold">Welcome</h3>
                          </div>
                          <div class="login-separater text-center">
                              <span> LOGIN TO VOTE</span>
                              <hr />
                          </div>
                          <div class="form-group mt-4">
                              <form action="/login" method="POST">
                                <label for="username">UserName</label>
                                <input class="form-control" type="text" placeholder="username" id="xyz" name="username">
                          </div>
                          <div class="form-group">
                          <label for="password">Password</label>
                          <input class="form-control" type="password" id="password" name="password">
                          </div>
                          <div class="form-row">
                          <div class="form-group col">
                          </div>
                          <div class="form-group col text-right">
                          </div>
                          </div>
                          <div class="btn-group mt-3 w-100">
                          <button class="btn btn-primary btn-block">Login</button>
                          </form>
                          </div>
                          <hr />
                          <div class="text-center">
                              <p
                                class="mb-0"
                                style="display: flex; flex: 1; justify-content: flex-start"
                                >
                                Don&apos;t have an account? <a href="register">Register</a>
                              </p>
                              <p
                                class="mb-0"
                                style="display: flex; flex: 1; justify-content: flex-end"
                                >
                                Admin &nbsp;<a href="admin"> Login Here</a>
                              </p>
                          </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <img
                          class="card-img login-img h-100"
                          id="loginimage"
                          src="assets/images/vote1.webp"
                          alt="..."
                          style="height: 70% !important; padding-top: 130px"
                          />
                    </div>
                  </div>
                  <!-- <footer>&copy; Copyright 2021</footer> -->
              </div>
              <!-- end row-->
            </div>
        </div>
      </div>
  </div>
